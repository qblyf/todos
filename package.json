{
  "name": "todo-management",
  "version": "1.0.0",
  "description": "简单的待办事项管理系统",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "tsc",
    "build:frontend": "node scripts/build-frontend.js",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --exec ts-node src/server.ts",
    "dev:frontend": "npm run build:frontend && live-server frontend --port=3001",
    "start": "node dist/server.js",
    "vercel-build": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "db:setup": "psql -U postgres -f scripts/setup-database.sql",
    "db:reset": "npm run db:setup"
  },
  "keywords": [
    "todo",
    "typescript",
    "express",
    "postgresql"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@types/sqlite3": "^3.1.11",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@types/pg": "^8.10.9",
    "@types/supertest": "^6.0.2",
    "concurrently": "^8.2.2",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
